<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EDictionary.Core.Styles">

		<Style TargetType="Button" x:Key="ButtonBaseStyle">
			
			<!-- fix button color when hovering -->
			<Setter Property="Button.Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>

			<Setter Property="BorderBrush" Value="{x:Null}"/>
			<Setter Property="Width" Value="22"/>
			<Setter Property="Height" Value="22"/>

	</Style>

		<Style TargetType="Button" x:Key="btnAmerica" BasedOn="{StaticResource ButtonBaseStyle}">
			<Setter Property="Background" Value="{StaticResource LightRed}"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="{StaticResource Red}"/>
				</Trigger>
				<Trigger Property="Button.IsPressed" Value="True">
					<Setter Property="Control.Background" Value="{StaticResource LightRed}"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Button" x:Key="btnBritian" BasedOn="{StaticResource ButtonBaseStyle}">
			<Setter Property="Background" Value="{StaticResource LightBlue}"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="{StaticResource Blue}"/>
				</Trigger>
				<Trigger Property="Button.IsPressed" Value="True">
					<Setter Property="Control.Background" Value="{StaticResource LightBlue}"/>
				</Trigger>
			</Style.Triggers>
		</Style>

		<Style TargetType="Button" x:Key="btnHistory" BasedOn="{StaticResource ButtonBaseStyle}">
			<Setter Property="Background" Value="{StaticResource LightGray}"/>
			<Style.Triggers>
				<Trigger Property="IsMouseOver" Value="True">
					<Setter Property="Background" Value="{StaticResource Gray}"/>
				</Trigger>
				<Trigger Property="Button.IsPressed" Value="True">
					<Setter Property="Control.Background" Value="{StaticResource LightGray}"/>
				</Trigger>
			</Style.Triggers>
		</Style>

	<Style TargetType="Button" x:Key="btnSearch" BasedOn="{StaticResource ButtonBaseStyle}">
		<Setter Property="Background" Value="{StaticResource LightYellow}"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="{StaticResource Yellow}"/>
			</Trigger>
			<Trigger Property="Button.IsPressed" Value="True">
				<Setter Property="Control.Background" Value="{StaticResource LightYellow}"/>
			</Trigger>
		</Style.Triggers>
	</Style>
	
</ResourceDictionary>