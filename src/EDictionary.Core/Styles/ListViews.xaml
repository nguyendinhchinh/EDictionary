<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

	<Style TargetType="ListView" BasedOn="{StaticResource BaseStyle}">

		<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
		<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="MinWidth" Value="119"/>
		<Setter Property="MinHeight" Value="280"/>
		<Setter Property="Background" Value="{StaticResource GrayBlue}"/>
		<Setter Property="Foreground" Value="{StaticResource Silver}"/>
		<Style.Resources>
			<Style TargetType="ListViewItem">
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="ListViewItem">
							<Border Name="_Border"
							        Padding="2"
							        SnapsToDevicePixels="true">
								<ContentPresenter />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsSelected" Value="true">
									<Setter TargetName="_Border" Property="Background" Value="{StaticResource Cyan}"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</Style.Resources>

		<!--<Sett-->
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Cursor" Value="Hand"/>
			</Trigger>
		</Style.Triggers>

	</Style>
</ResourceDictionary>