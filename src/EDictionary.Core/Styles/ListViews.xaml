<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style TargetType="ListView" BasedOn="{StaticResource BaseStyle}">

		<Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
		<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
		<Setter Property="VerticalAlignment" Value="Stretch"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="MinWidth" Value="119"/>
		<Setter Property="MinHeight" Value="280"/>
		<Setter Property="Background" Value="{StaticResource GrayBlue}"/>
		<Setter Property="Foreground" Value="{StaticResource Silver}"/>

		<!--<Sett-->
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Cursor" Value="Hand"/>
			</Trigger>
		</Style.Triggers>
	</Style>


</ResourceDictionary>