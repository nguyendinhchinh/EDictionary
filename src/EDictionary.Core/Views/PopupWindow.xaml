<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDictionary.Core.Views"
        xmlns:Controls="clr-namespace:EDictionary.Controls;assembly=EDictionary.Controls"
				x:Class="EDictionary.Core.Views.PopupWindow"
        mc:Ignorable="d"
				WindowStartupLocation="CenterScreen"
        Title="EDictionary"
				Height="175"
				Width="300"
	      WindowStyle="None"
				ResizeMode="NoResize"
				Topmost="True">
	<Grid>


		<Controls:ExpandedRichTextBox
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Height="175"
				Width="300"
				Text="{Binding Definition}">
			<FlowDocument>
				<Paragraph>
					<Run Text="ExpandedRichTextBox"/>
				</Paragraph>
			</FlowDocument>
		</Controls:ExpandedRichTextBox>


	</Grid>
</Window>
